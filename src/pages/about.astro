<style>
	.hero-section {
		padding: 8rem 0 4rem;
		background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
		text-align: center;
	}

	.hero-content h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 800;
	}

	.hero-subtitle {
		font-size: clamp(1.2rem, 2.5vw, 1.5rem);
		color: var(--color-accent-gold);
		font-weight: 500;
	}

	.bio-section {
		padding: 6rem 0;
		background: var(--color-bg-secondary);
	}

	.bio-content {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.bio-text h2 {
		font-size: 2.5rem;
		color: var(--color-text);
		margin-bottom: 0.5rem;
		font-weight: 700;
	}

	.bio-text h3 {
		font-size: 1.3rem;
		color: var(--color-accent-gold);
		margin-bottom: 2rem;
		font-weight: 500;
	}

	.bio-text p {
		font-size: 1.1rem;
		color: var(--color-text-secondary);
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}

	.mission-section {
		padding: 6rem 0;
		background: var(--color-bg);
	}

	.mission-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.mission-card {
		background: rgba(26, 26, 26, 0.6);
		border: 1px solid rgba(212, 175, 55, 0.2);
		border-radius: 16px;
		padding: 2rem;
		backdrop-filter: blur(10px);
	}

	.mission-card h3 {
		font-size: 1.5rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.mission-card p {
		color: var(--color-text-secondary);
		line-height: 1.6;
	}

	.mission-card ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.mission-card li {
		color: var(--color-text-secondary);
		line-height: 1.6;
		margin-bottom: 0.8rem;
	}

	.objectives-section {
		padding: 6rem 0;
		background: var(--color-bg-secondary);
	}

	.objectives-section h2 {
		text-align: center;
		font-size: 2.5rem;
		color: var(--color-text);
		margin-bottom: 3rem;
		font-weight: 700;
	}

	.objectives-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.objective-item {
		text-align: center;
		padding: 1.5rem;
	}

	.objective-item h4 {
		font-size: 1.3rem;
		color: var(--color-accent-gold);
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.objective-item p {
		color: var(--color-text-secondary);
		line-height: 1.6;
	}

	.cta-section {
		padding: 6rem 0;
		background: var(--color-bg);
		text-align: center;
	}

	.cta-content h2 {
		font-size: 2.5rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.cta-content p {
		font-size: 1.2rem;
		color: var(--color-text-secondary);
		margin-bottom: 2rem;
	}

	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		background: var(--color-accent-gold);
		color: var(--color-bg);
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
		transition: all 0.3s ease;
	}

	.cta-button:hover {
		background: transparent;
		color: var(--color-accent-gold);
		border: 2px solid var(--color-accent-gold);
	}

	@media (max-width: 768px) {
		.hero-section {
			padding: 6rem 0 3rem;
		}

		.bio-section,
		.mission-section,
		.objectives-section,
		.cta-section {
			padding: 4rem 0;
		}

		.mission-grid,
		.objectives-grid {
			grid-template-columns: 1fr;
		}
	}
</style>