<div class="globe-container" role="img" aria-label="Interactive 3D globe showing Atlas Divisions global presence">
  <div id="globe-canvas" aria-live="polite" aria-describedby="globe-description"></div>
</div>

<script type="module" src="/js/globe.js"></script>

<style>
  .globe-container {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  #globe-canvas {
    width: min(400px,90vw);
    height: min(400px,90vw);
    max-width: 400px;
    max-height: 400px;
    animation: float 6s ease-in-out infinite;
    filter: drop-shadow(0 0 30px rgba(212,175,55,0.3));
    transition: transform .3s ease;
  }
  @keyframes float {
    0%,100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }
  @media (prefers-reduced-motion: reduce) {
    #globe-canvas { animation: none; transform: none; }
  }
  @media (max-width: 768px) {
    #globe-canvas { width: min(300px, 80vw); height: min(300px, 80vw); }
  }
  @media (max-width: 480px) {
    #globe-canvas { width: min(250px, 75vw); height: min(250px, 75vw); }
  }
</style>
