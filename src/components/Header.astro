---
import Globe from './Globe.astro';
---

<header class="hero">
	<div class="container">
		<div class="hero-content">
			<div class="globe-section">
				<Globe />
			</div>
			<div class="content-section">
				<div class="logo-section">
					<h1 class="logo">Atlas Divisions</h1>
					<p class="tagline">Mapping Chaos. Building Resilience.</p>
				</div>
				<div class="identity-statement">
					<p>
						Atlas Divisions is an adaptive solutions company founded by Captain Harley Miller. 
						We integrate real-world skills, practical resilience, and AI transparency to address 
						real problemsâ€”no fluff, no nonsense.
					</p>
				</div>
			</div>
		</div>
	</div>
</header>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 30% 20%, rgba(212, 175, 55, 0.1) 0%, transparent 50%),
					radial-gradient(circle at 70% 80%, rgba(0, 128, 128, 0.08) 0%, transparent 50%);
		pointer-events: none;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 4rem;
		max-width: 1200px;
		margin: 0 auto;
		animation: fadeInUp 1s ease-out;
	}

	.globe-section {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.content-section {
		flex: 1;
		text-align: left;
	}

	.logo-section {
		margin-bottom: 3rem;
	}

	.logo {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: var(--color-text);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.tagline {
		font-size: clamp(1.2rem, 2.5vw, 1.5rem);
		color: var(--color-accent-gold);
		font-weight: 500;
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	.identity-statement {
		background: rgba(26, 26, 26, 0.8);
		border: 1px solid rgba(212, 175, 55, 0.3);
		border-radius: 12px;
		padding: 2.5rem;
		backdrop-filter: blur(10px);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
	}

	.identity-statement p {
		font-size: clamp(1.1rem, 2vw, 1.3rem);
		color: var(--color-text-secondary);
		line-height: 1.7;
		font-weight: 400;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 90vh;
			padding: 2rem 0;
		}

		.hero-content {
			flex-direction: column;
			text-align: center;
			gap: 2rem;
		}

		.content-section {
			text-align: center;
		}

		.identity-statement {
			padding: 2rem;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding: 1rem 0;
		}

		.hero-content {
			gap: 1.5rem;
		}

		.identity-statement {
			padding: 1.5rem;
		}
	}

		.logo-section {
			margin-bottom: 2rem;
		}
	}
</style>