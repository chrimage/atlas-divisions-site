{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node", "three"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/global.d.ts", "src/**/*.ts", "src/**/*.astro"],
  "exclude": ["node_modules", "dist", "src/components/Globe.astro"]
}
